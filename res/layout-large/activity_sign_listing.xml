    android:baselineAligned="false" >

    <ViewPager
            android:id="@+id/pager"
            android:layout_width="@dimen/list_width"
            android:layout_height="match_parent"/>
    
    <LinearLayout
            android:id="@+id/details_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    
</LinearLayout>